<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/image_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="4dp"
                android:src="@drawable/icon_next_black"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/image_setting"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="4dp"
                android:src="@drawable/icon_settings"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@drawable/new_background1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_library_card_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:text="Электронный Читательский билет"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                tools:ignore="HardcodedText"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/main_font"/>

            <TextView
                android:id="@+id/text_library_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="1 2345 6789 1234"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                tools:ignore="HardcodedText"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/main_font"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Иван"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    tools:ignore="HardcodedText"
                    android:layout_weight="1"
                    android:fontFamily="@font/main_font"/>

                <TextView
                    android:id="@+id/text_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="02/03/25"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    tools:ignore="HardcodedText"
                    android:gravity="center"
                    android:fontFamily="@font/main_font"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/search_layout_background">

            <TextView
                android:id="@+id/text_mybook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Мои книги"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:gravity="center"
                android:fontFamily="@font/main_font"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:background="@drawable/rounded_background_black"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/text_want"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Желаемое"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:gravity="center"
                android:fontFamily="@font/main_font"
                android:textColor="#000000"
                android:layout_weight="1"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="8dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/profile_list_background"
            android:layout_weight="1" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:paddingBottom="180dp">

            <TextView
                android:id="@+id/text_check"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#000000"
                app:fontFamily="@font/main_font"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Загружаем книги..."
                android:layout_weight="1"/>

        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>