<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnteresActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background1"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:src="@drawable/icon_back_gray"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Моя библиотека"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center"
                android:fontFamily="@font/main_font"
                tools:ignore="HardcodedText"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="50dp"
                android:paddingBottom="50dp"
                android:background="@drawable/edite_text_backround">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Электронная почта"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/main_font"
                    tools:ignore="HardcodedText"/>

                <EditText
                    android:id="@+id/edittext_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textSize="22sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="30dp"
                    android:textColorHint="#70000000"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/edite_text_backround"
                    android:maxLines="1"
                    android:lines="1"
                    android:maxLength="24"
                    android:fontFamily="@font/main_font"
                    android:hint="email@mail.ru"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Пароль"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/main_font"
                    tools:ignore="HardcodedText"/>

                <EditText
                    android:id="@+id/edittext_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textSize="22sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="15dp"
                    android:inputType="textPassword"
                    android:background="@drawable/edite_text_backround"
                    android:maxLines="1"
                    android:lines="1"
                    android:maxLength="24"
                    android:fontFamily="@font/main_font"
                    android:hint="Ваш секретный пароль"
                    android:textColorHint="#70000000"/>

                <LinearLayout
                    android:id="@+id/linear_remember_me"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/image_remember_me"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/icon_check_box"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Запомнить меня"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#80000000"
                        android:gravity="center"
                        android:fontFamily="@font/main_font"
                        tools:ignore="HardcodedText"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="50dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="50dp">

            <LinearLayout
                android:id="@+id/linear_continue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="end"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_enteres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ПРОДОЛЖИТЬ"
                    android:textSize="18sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="40dp"
                    android:paddingEnd="40dp"
                    android:textStyle="bold"
                    android:textColor="#131313"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/main_font"
                    android:background="@drawable/edite_text_backround"
                    android:layout_gravity="center"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/image_enteres"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_back_gray"
                    android:rotation="180"/>

            </LinearLayout>

            <TextView
                android:id="@+id/text_problem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Забыли пароль?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#70000000"
                android:gravity="center"
                android:fontFamily="@font/main_font"
                tools:ignore="HardcodedText"/>

            <LinearLayout
                android:id="@+id/linear_employ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/image_employ"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/icon_check_box"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Войти как сотрудник"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#70000000"
                    android:gravity="center"
                    android:fontFamily="@font/main_font"
                    tools:ignore="HardcodedText"/>

            </LinearLayout>
        </LinearLayout>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>