<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_background_white">


        <ImageView
            android:id="@+id/image_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_close_black"
            android:layout_margin="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/search_layout_background">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_info"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/search_layout_background"
                android:fontFamily="@font/main_font"
                android:padding="8dp"
                android:text="Для получения книги, дайте сотруднику отсканировать QR-Код"
                android:textColor="#000000"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

        </LinearLayout>


        <ImageView
            android:id="@+id/image_qr_code"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_margin="20dp"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/home_background"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:transformPivotY="30dp"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Вы хотите получить:"
                android:textSize="24sp"
                android:textColor="#000000"
                android:layout_gravity="start"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/main_font"/>
            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Название"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/main_font"/>
            <TextView
                android:id="@+id/text_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Описание"
                android:textSize="18sp"
                tools:ignore="HardcodedText"
                android:textColor="#000000"
                android:fontFamily="@font/main_font"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>