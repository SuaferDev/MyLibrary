<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/rounded_background_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/image_close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_close_black"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Добавление книги"
                android:textColor="#000000"
                app:fontFamily="@font/main_font"
                android:textStyle="bold"
                android:gravity="center"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Название книги"
                android:textColor="#000000"
                app:fontFamily="@font/main_font"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp"
                tools:ignore="HardcodedText"/>


            <EditText
                android:id="@+id/edittext_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="22sp"
                android:textColor="#000000"
                android:layout_marginBottom="30dp"
                android:textColorHint="#70000000"
                android:inputType="textEmailAddress"
                android:background="@drawable/edite_text_backround"
                android:maxLines="1"
                android:lines="1"
                android:maxLength="50"
                android:fontFamily="@font/main_font"
                android:hint="Название"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Название книги"
                android:textColor="#000000"
                app:fontFamily="@font/main_font"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp"
                tools:ignore="HardcodedText"/>
            <EditText
                android:id="@+id/edittext_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="22sp"
                android:textColor="#000000"
                android:layout_marginBottom="30dp"
                android:textColorHint="#70000000"
                android:inputType="textEmailAddress"
                android:background="@drawable/edite_text_backround"
                android:maxLines="1"
                android:lines="1"
                android:maxLength="50"
                android:fontFamily="@font/main_font"
                android:hint="И. О. Фамилия"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Жанры (через запятую)"
                android:textColor="#000000"
                app:fontFamily="@font/main_font"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp"
                tools:ignore="HardcodedText"/>
            <EditText
                android:id="@+id/edittext_genres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="22sp"
                android:textColor="#000000"
                android:layout_marginBottom="30dp"
                android:textColorHint="#70000000"
                android:inputType="textEmailAddress"
                android:background="@drawable/edite_text_backround"
                android:maxLines="1"
                android:lines="1"
                android:maxLength="100"
                android:fontFamily="@font/main_font"
                android:hint="жанр1,жанр2,жанр3"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Описание"
                android:textColor="#000000"
                app:fontFamily="@font/main_font"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp"
                tools:ignore="HardcodedText"/>
            <EditText
                android:id="@+id/edittext_description"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="8dp"
                android:textSize="22sp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                android:textColorHint="#70000000"
                android:inputType="textEmailAddress"
                android:background="@drawable/edite_text_backround"
                android:fontFamily="@font/main_font"
                android:layout_weight="1"
                android:hint="Описание"/>


            <LinearLayout
                android:id="@+id/liner_add_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/active_button_book"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:padding="8dp">

                <TextView
                    android:id="@+id/text_add_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:text="Добавить книгу"
                    android:textColor="#FFFFFF"
                    app:fontFamily="@font/main_font"
                    android:textStyle="bold"
                    android:gravity="center"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>