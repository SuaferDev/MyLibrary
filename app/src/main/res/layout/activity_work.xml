<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_home"
    tools:context=".WorkActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_hello"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:text="Доброе утро,"
                android:textSize="18sp"
                android:textColor="#000000"
                tools:ignore="HardcodedText"
                android:gravity="center"
                android:fontFamily="@font/main_font_italic"/>
            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:text="Электронный Читательский билет"
                android:textSize="20sp"
                android:textColor="#000000"
                tools:ignore="HardcodedText"
                android:gravity="center"
                android:fontFamily="@font/main_font"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/linear_add_book"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/rounded_background_white">

                <ImageView
                    android:id="@+id/image_back"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="8dp"
                    android:src="@drawable/icon_add"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Добавить Книгу"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:fontFamily="@font/main_font"
                    android:textColor="#000000"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linear_give_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_background_white">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="8dp"
                    android:src="@drawable/icon_give_book"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Выдать Книгу"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:fontFamily="@font/main_font"
                    android:textColor="#000000"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/linear_get_reader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_background_white">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="8dp"
                    android:src="@drawable/icon_get_book"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Забрать Книгу"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:fontFamily="@font/main_font"
                    android:textColor="#000000"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:text="Выданные книги"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                tools:ignore="HardcodedText"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/main_font"/>

            <ImageView
                android:id="@+id/image_update"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="4dp"
                android:src="@drawable/icon_update"/>
        </LinearLayout>



        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="8dp"
            android:background="@drawable/rounded_background_white"
            android:layout_weight="1" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:paddingBottom="180dp">

            <TextView
                android:id="@+id/text_check"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#000000"
                app:fontFamily="@font/main_font"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Загружаем книги..."
                android:layout_weight="1"/>

        </LinearLayout>
    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>